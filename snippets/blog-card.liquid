<div class='custom--boxshadow'>
<a href="{{article.url}}" class="bcard--default bcard--{{settings.blogCardStyle}} border-radius">
  <div class="bcard__img--container">
    <div class="bcard__img--ratio">
        <div class="bcard__img border-radius">
        {% unless article.image == nil %}
            {% render 'ratio-image', ratioType: 'vw', dratio: '25', mratio: '100', image: article.image.src, alt: article.image.alt %}
        {% else %}
            {{'collection-1' | placeholder_svg_tag: 'svg__thumb'}}
        {% endunless %}
        </div>
    </div>
  </div>
  </a>
  <div class="bcard__info">

    <p id="time" class="blog__listing-time">{{ article.published_at | date: "%B %d, %Y" }}</p>
      <a href="{{article.url}}" class="blog__listing--title">
        <h3 class="bcard__title">{{ article.title }}</h3>
      </a>
      <p class="blog__listing--excerpt bcard__excerpt">
        <span>{{article.excerpt | default: article.content | strip_html | truncate: 240 }}</span>
      </p>
      {% render 'button', type: 'primary', url: article.url, text: 'Read more' %}

    {% comment %}
    <span class="bcard__title">{{article.title}}</span>
    {% if settings.blogCardExcerpt %}<p class="bcard__excerpt">{{article.excerpt | default: article.content | truncate: 140 | strip_html }}</p>{% endif %}
    {% if settings.blogCardAuthor %}<span class="bcard__author">by {{article.author}}</span>{% endif %}
    {% endcomment %}
  </div>
</div>