<style>
    .custom-faq__list {
        list-style: none;
        margin: 0;
    }
    custom-faq__item {
        margin-bottom: 24px;
    }
    h3.custom-faq__name {
        margin-bottom: 0;
    }
</style>
<ul class="custom-faq__list">
  {% for item in list %}
    {% if item == blank %}
      {% continue %}
    {% endif %}
    
    {% assign currentIndex = forloop.index0 %}
    {% if item contains "_" %}
      <li class="custom-faq__item" data-index="{{currentIndex}}">
        {% assign first = item | split: "?" | first %}
        {% assign last = item | split: "?" | last %}
                              
        <h3 class="custom-faq__name">{{ first }}?</h3>
                      
        {% if last != blank and last != first %}
          <p class="custom-faq__value">{{ last }}</p>
        
                            
        {% endif %}
                              
      </li>
    {% else %}
      {% continue %}
    {% endif %}
  {% endfor %}
</ul>